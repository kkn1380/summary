{
    "name": "youtube-subtitle-extractor",
    "version": "1.0.0",
    "description": "YouTube subtitle extraction tool using TypeScript",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start": "tsx src/index.ts",
        "dev": "tsx watch src/index.ts",
        "monitor": "tsx src/monitor.ts",
        "monitor:watch": "tsx src/monitor.ts --watch",
    "setup": "tsx src/setup.ts",
    "run:fetchScript": "tsx src/runOnce.ts --fetchScript",
    "run:fetchAndSummarize": "tsx src/runOnce.ts --summarize",
    "run:fetchSummarizeSheet": "tsx src/runOnce.ts --sheet"
    },
    "keywords": [
        "youtube",
        "subtitle",
        "caption",
        "extractor",
        "typescript",
        "ai",
        "summary",
        "google-sheets"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "dotenv": "^16.4.5",
        "googleapis": "^144.0.0",
        "openai": "^6.15.0",
        "rss-parser": "^3.13.0",
        "youtube-caption-extractor": "^1.9.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3"
    }
}
