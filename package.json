{
    "name": "youtube-subtitle-extractor",
    "version": "1.0.0",
    "description": "YouTube subtitle extraction tool using TypeScript",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start": "tsx src/index.ts",
        "dev": "tsx watch src/index.ts",
        "monitor": "tsx src/monitor.ts",
        "monitor:watch": "tsx src/monitor.ts --watch",
        "serve": "tsx src/server.ts",
        "serve:site": "bash scripts/serve-site.sh",
        "generate:html": "tsx scripts/generate-html-only.ts",
        "fetch:historical": "tsx scripts/fetch-historical-data.ts",
        "setup": "tsx src/setup.ts",
        "fetchScript": "tsx src/runOnce.ts --fetchScript",
        "fetchAndSummarize": "tsx src/runOnce.ts --summarize",
        "fetchSummarizeSheet": "tsx src/runOnce.ts --sheet"
    },
    "keywords": [
        "youtube",
        "subtitle",
        "caption",
        "extractor",
        "typescript",
        "ai",
        "summary",
        "google-sheets"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "dotenv": "^16.4.5",
        "googleapis": "^144.0.0",
        "openai": "^6.15.0",
        "rss-parser": "^3.13.0",
        "@google-cloud/storage": "^7.12.1",
        "youtube-transcript": "^1.0.3",
        "youtube-caption-extractor": "^1.9.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3"
    }
}
